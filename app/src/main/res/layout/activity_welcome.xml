<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/background">

    <TextView
        android:id="@+id/tvWelcome"
        style="@style/LabelTextHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:gravity="center"
        android:text="WELCOME TO TRIPS"
        android:textColor="#37474f" />

    <shyn.zyot.mytravels.utils.CircleImageView
        android:id="@+id/ivAvatar"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_centerInParent="true"
        android:src="@mipmap/default_avatar" />


    <TextView
        android:id="@+id/tvTextEnd"
        style="@style/LabelTextCommon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btnStarted"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:gravity="center"
        android:layout_marginBottom="25dp"
        android:text="@string/welcome_introduce_end"
        android:textColor="@color/colorIconInForm" />

    <TextView
        android:id="@+id/tvTextBegin"
        style="@style/LabelTextCommon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/tvTextEnd"
        android:gravity="center"
        android:text="@string/welcome_introduce_begin"
        android:textColor="@color/colorIconInForm" />

    <Button
        android:id="@+id/btnStarted"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/margin_normal_16"
        style="@style/Button"
        android:text="Get Started"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</RelativeLayout>